{
    "name":"Chart Image Utility",
    "version":"0.0.0.2",
    "description":"Utility to help get accurate interpolated values from an image of a chart.",
    "browser_action":{
        "default_icon":"ChartImageUtility_Icon_16x16.png"
    },
    "icons":{
        "16":"ChartImageUtility_Icon_16x16.png",
        "48":"ChartImageUtility_Icon_48x48.png",
        "128":"ChartImageUtility_Icon_128x128.png"
    },
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js": ["chart.js"]
        }
    ],
    "manifest_version":2
}